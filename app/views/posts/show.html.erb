<p id="notice"><%= notice %></p>

 <!-- Place a header saying that it is post with title whatever by user  -->


        <p><%= @post.title %></p>

        <p>
          <%= "City:" %>
          <%= @post.city %></p>

        <p>
          <%= "Venue:" %>
          <%= @post.venue %></p>

        <p>
          <%= "Address:" %>
          <%= @post.address %></p>

        <p>
          <%= "Date of event:" %>
          <%= @post.date %></p>

        <p>
          <%= "Event starts at:" %>
          <%= @post.start_hour %></p>

        <p>
          <%= "Event ends at:" %>
          <%= @post.end_hour %></p>

        <p>
          <%= "Theme:" %>
          <%= @post.theme %></p>

        <p>
          <%= "Description/Body:" %>
          <%= @post.body %></p>

          Posted by <%= @post.user.name %>
          <%= time_ago_in_words(@post.created_at) %> ago

<!-- links to edit or delete, assuming you are the user that created the post  -->

        <p><%= link_to 'Edit', edit_post_path(@post) if current_user == @post.user %></p>
        <p><%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } if current_user == @post.user %></p>

  <!-- New Comment: -->

  <%= render 'comments/form' %>
        <ul>
          <% @post.comments.each do |comment| %>
          <li>
            <%= comment.body %>
          </li>
          <% end %>
        </ul>

<%= link_to 'Back to all posts', posts_path %>
