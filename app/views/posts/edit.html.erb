<h1>Edit this Post</h1>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <div>
    <%= f.label :start_hour %>
    <%= f.time_field :start_hour %>
  </div>
  <div>
    <%= f.label :end_hour %>
    <%= f.time_field :end_hour %>
  </div>
  <div>
    <%= f.label :theme %>
    <%= f.text_field :theme %>
  </div>
  <br />
  <div>
    <%= f.label :body %>
    <br />
    <%= f.text_area :body %>
  </div>

    <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to the post feed!", posts_path %>
