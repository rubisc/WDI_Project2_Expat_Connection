<h1>Edit your profile</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :profile_photo %>
    <%= f.file_field :profile_photo %>
  </div>
  <br />
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <br />
  <br />
  <div>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>
  <br />
  <div>
    <%= f.label :home_city %>
    <%= f.text_field :home_city %>
  </div>
  <br />
  <div>
    <%= f.label :home_country %>
    <%= f.text_field :home_country %>
  </div>
  <br />
  <div>
    <%= f.label :current_city %>
    <%= f.text_field :current_city %>
  </div>
  <br />
  <div>
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>
  <br />
  <div>
    <%= f.label :second_language %>
    <%= f.text_field :second_language %>
  </div>
  <br />
  <div>
    <%= f.label :third_language %>
    <%= f.text_field :third_language %>
  </div>
  <div>
    <br />
    <%= f.label :bio %>
    <br />
    <%= f.text_area :bio %>
  </div>
  <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to all users!", users_path %>
