
<% if current_user.nil? %>
<%= render 'partials/about'  %>
<% else %>
<div class="jumbotron">
  <%= "You already know all about us, silly" %>
  <div class="world-image">
  <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ6q-VNo3QBxBym4vW141oAKy5stCJH8ScVRvL5-396u4x4AuZz' %>
  </div>
</div>
<% end %>

<% if current_user.nil? %>
<div class="sign-up-header">
<h1>Sign up to meet friends from all over</h1>
</div>

<div class="sign-up-form">
<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br />
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
<br />
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br />
  <div>
    <%= f.label :confirm_password %>
    <%= f.password_field :confirm_password %>
  </div>
  <br />
  <div>
    <%= f.label :profile_photo %>
    <%= f.file_field :profile_photo %>
  </div>
  <br />
  <div>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>
  <br />
  <div>
    <%= f.label :home_city %>
    <%= f.text_field :home_city %>
  </div>
  <br />
  <div>
    <%= f.label :home_country %>
    <%= f.text_field :home_country %>
  </div>
  <br />
  <div>
    <%= f.label :current_city %>
    <%= f.text_field :current_city %>
  </div>
  <br />
  <div>
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>
  <br />
  <div>
    <%= f.label :second_language %>
    <%= f.text_field :second_language %>
  </div>
  <br />
  <div>
    <%= f.label :third_language %>
    <%= f.text_field :third_language %>
  </div>
  <div>
    <br />
    <%= f.label :bio %>
    <br />
    <%= f.text_area :bio %>
  </div>
  <div>
    <%= f.submit "Sign me up!" %>
  </div>
  </div>
<% end %>
<% end %>
