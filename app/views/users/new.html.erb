<h1>Sign up and become a member of Expat Connection!</h1>
<h4>You don't have to be an expat! Come meet friends from all over. </h4>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br />
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
<br />
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :confirm_password %>
    <%= f.password_field :confirm_password %>
  </div>
  <br />
  <div>
    <%= f.label :profile_photo %>
    <%= f.file_field :profile_photo %>
  </div>
  <br />
  <div>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>
  <br />
  <div>
    <%= f.label :home_city %>
    <%= f.text_field :home_city %>
  </div>
  <br />
  <div>
    <%= f.label :home_country %>
    <%= f.text_field :home_country %>
  </div>
  <br />
  <div>
    <%= f.label :current_city %>
    <%= f.text_field :current_city %>
  </div>
  <br />
  <div>
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>
  <br />
  <div>
    <%= f.label :second_language %>
    <%= f.text_field :second_language %>
  </div>
  <br />
  <div>
    <%= f.label :third_language %>
    <%= f.text_field :third_language %>
  </div>
  <div>
    <br />
    <%= f.label :bio %>
    <br />
    <%= f.text_area :bio %>
  </div>
  <div>
    <%= f.submit "Sign me up!" %>
  </div>
<% end %>
